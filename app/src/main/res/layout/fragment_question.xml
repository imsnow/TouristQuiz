<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/transparent"
    android:id="@+id/layout">

    <TextView
        android:layout_gravity="top|end"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/timer_view"
        android:padding="32dp"
        android:text="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_marginBottom="64dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/quiz_text"
        android:id="@+id/quiz_text"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_gravity="start|bottom"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/button1"
                android:text="@string/quiz_button1"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/button2"
                android:text="@string/quiz_button2"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/error_text"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/button4"
                android:text="@string/quiz_button4"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button3"
                android:text="@string/quiz_button3"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>

        <TextView
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="@string/quiz_error"
            android:id="@+id/error_text" />

    </LinearLayout>

</FrameLayout>
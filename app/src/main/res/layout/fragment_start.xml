<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/start_bg">

    <View
        android:background="@color/sky"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:contentDescription="@string/app_name"
            android:src="@drawable/selfie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:text="@string/app_name"
            android:gravity="center"
            android:textSize="30sp"
            android:textScaleX="1.2"
            android:paddingBottom="16dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/button_start"
        android:text="@string/start_button"
        android:background="@drawable/sel_play_button"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        style="@style/BaseMargin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>
    <!--
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        style="@style/StartButtonStyle"
        android:background="@drawable/sel_button_start"
        android:text="@string/button_partner_quiz"
        android:id="@+id/button_partner" />
    -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        style="@style/StartButtonStyle"
        android:background="@drawable/sel_button_start"
        android:text="@string/button_my_quiz"
        android:id="@+id/button_my_quiz" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        style="@style/StartButtonStyle"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_marginRight="16dp"
            android:background="@drawable/sel_button_start"
            android:layout_height="match_parent"
            android:src="@drawable/ic_leaderboard"
            android:id="@+id/button_leaderboard" />

  <!--      <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_marginRight="8dp"
            android:background="@drawable/sel_button_start"
            android:layout_height="match_parent"
            android:src="@drawable/ic_achievement"
            android:id="@+id/button_achievements" /> -->

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_marginRight="16dp"
            android:background="@drawable/sel_button_start"
            android:layout_height="match_parent"
            android:src="@drawable/ic_tip"
            android:id="@+id/button_tips" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:background="@drawable/sel_button_start"
            android:layout_height="match_parent"
            android:src="@drawable/ic_setting"
            android:id="@+id/button_settings" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"/>

    <TextView
        android:id="@+id/version_text"
        android:gravity="center"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

</LinearLayout>

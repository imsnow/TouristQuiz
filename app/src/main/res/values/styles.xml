<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!--  <item name="android:windowFullscreen">true</item> -->
        <!--  <item name="android:windowContentOverlay">@null</item> -->
       </style>

      <style name="AnswerButtonStyle" parent="BaseMargin">
          <item name="android:background">@drawable/sel_button_answer</item>
          <item name="android:textColor">@android:color/white</item>
          <item name="android:layout_gravity">center</item>
          <item name="android:gravity">center</item>
          <item name="android:singleLine">true</item>
          <item name="android:padding">8dp</item>
          <item name="android:textSize">20sp</item>
      </style>

      <style name="ItemListTextView">
          <item name="android:textColor">@color/text_primary</item>
          <item name="android:textSize">18sp</item>
          <item name="android:padding">8dp</item>
      </style>

    <style name="StartButtonStyle" parent="BaseMargin">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BaseMargin">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="DialogTextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogTextViewBig">
        <item name="android:textSize">22sp</item>
    </style>

</resources>
